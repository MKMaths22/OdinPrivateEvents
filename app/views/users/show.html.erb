<% if  @user.events.size.positive? %>
  Here are the Events created by 
  <%= @user[:name] %>:
  <br>
  <br>
  <%= render partial: '/display_events', locals: {events_to_display: @user.events, link_single_events: true } %>
<% else %>
  <%= @user[:name] %>
  currently has no created Events.
<% end %>

<% if @user.attended_events.size.positive? %>
  These are the Events attended by
  <%= @user[:name] %>:
  <br>
  <br>
  Events in the past:
  <br>
  <br>
  <%= render partial: '/display_events', locals: {events_to_display: @user.attended_events.where(date: ..(Time.now)), link_single_events: true } %>
  Events in the future:
  <br>
  <br>
  <%= render partial: '/display_events', locals: {events_to_display: @user.attended_events.where(date: (Time.now)..), link_single_events: true } %>
<% else %>
  <%= @user[:name] %>
  currently has no attended Events.
<% end %>
  