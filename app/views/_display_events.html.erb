<% if events_to_display.size.zero? %> 
  There are no Events to display.
<% end %>
<% events_to_display.each do |event| %>
    <% if Event.all.future.include?(event) %>
      <% future = true %>
    <% else %>
      <% future = false %>
    <% end %>
    <br>
    <br>
    Event
    <%= event.id %>
  <br>
   <% if future %> Takes
    <% else %> Took
   <% end %>
   place at
  <%= event.location %>
  <br>
  At 
  <%= event.date %>
  <br>
  <% if link_single_events %>
    <%= link_to "More info on this Event", event_path(id: event.id) %>
  <% end %>
  <% if current_user %>
    <% if current_user.invited_events.include?(event) %>
      <% invite = Invitation.find(invited_event_id: event.id, invitee_id: current_user.id) %>
      <% if invite.declined %>
        You have declined your invitation to this Event.
      <% else %>
        You were invited to this Event.
        <% if future == true %>
          You have been invited to this Event.
          <%= link_to "Accept Invitation", bookings_path(event_id: event.id), data: { 'turbo-method' => :post } %>
          <%= link_to "Decline Invitation", invitation_path(id: [invite.invited_event_id, invite.invitee_id]), data: { 'turbo-method' => :patch } %>
        <% else %>
          You have attended this Event.
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>